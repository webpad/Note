<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <name.vbraun.view.ReturnTouchEventLinearLayout
        android:id="@+id/layout_launcher_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_with_selected_effect"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="199dp"
            android:layout_height="246dp"
            android:background="@drawable/ic_note"
            android:paddingRight="26dp"
            android:paddingLeft="32dp"
            android:paddingTop="34.25dp"
            android:paddingBottom="26dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="Create Note"
            android:textColor="@drawable/black"
            android:textSize="@dimen/text_size_medium" />
    </name.vbraun.view.ReturnTouchEventLinearLayout>

    <utility.ToggleImageButton
        android:id="@+id/btn_check"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignRight="@id/layout_launcher_item"
        android:layout_marginRight="3dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:check_state="false"
        app:src_checked="@drawable/writing_thumbnail_checkbox_checked"
        app:src_unchecked="@drawable/writing_thumbnail_checkbox_unchecked" />

</RelativeLayout>