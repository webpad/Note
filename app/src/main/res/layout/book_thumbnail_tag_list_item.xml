<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="179dp"
    android:layout_height="62dp"
    android:background="@drawable/writing_thumbnail_tag_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="Test12345678901234567890123456789012345678901234567890"
        android:textColor="@android:color/black"
        android:textSize="26dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_quick_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_mark"
        android:visibility="gone" />

    <utility.ToggleImageButton
        android:id="@+id/btn_tag_check"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:src_checked="@drawable/writing_thumbnail_checkbox_s_checked"
        app:src_unchecked="@drawable/writing_thumbnail_checkbox_s_unchecked" />

</LinearLayout>