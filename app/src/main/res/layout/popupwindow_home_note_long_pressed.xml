<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_default3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_rename"
            android:layout_width="108dp"
            android:layout_height="95dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/note_main_page_manage_rename" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/rename"
                android:textSize="23dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/btn_copy"
            android:layout_width="108dp"
            android:layout_height="95dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/note_main_page_manage_copy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/copy"
                android:textSize="23dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/btn_backup"
            android:layout_width="108dp"
            android:layout_height="95dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/note_main_page_manage_backup" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/backup"
                android:textSize="23dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/btn_delete"
            android:layout_width="108dp"
            android:layout_height="95dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/note_main_page_manage_delete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/delete"
                android:textSize="23dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>