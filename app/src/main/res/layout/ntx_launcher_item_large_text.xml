<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ntx_bookshelf_item_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="340dp"
    android:background="@drawable/bg_with_selected_effect"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:id="@+id/ntx_launcher_create_note"
        android:layout_width="@dimen/layout_width_tv_note_book"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="266dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:textColor="@drawable/black"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:id="@+id/ntx_launcher_create_note_image"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside" />


    <TextView
        android:id="@+id/ntx_launcher_note_title"
        android:layout_width="@dimen/layout_width_tv_note_book"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ntx_launcher_note_image"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@drawable/black"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:id="@+id/ntx_launcher_note_image"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingBottom="0dp"

        android:scaleType="centerInside" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/ntx_launcher_note_image"
        android:layout_alignTop="@+id/ntx_launcher_note_image"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/ring"
        android:button="@drawable/checkbox_style2"
        android:checked="false"
        android:visibility="invisible" />

</RelativeLayout>