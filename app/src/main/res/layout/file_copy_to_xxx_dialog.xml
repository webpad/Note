<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="100">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="84">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_default2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="42dp"
                        android:gravity="center_vertical"
                        android:text="@string/file_copy_to_xxx_dialog_title"
                        android:textColor="@android:color/black"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <RadioGroup
                        android:id="@+id/radio_group_copy_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/btn_copy_to_current_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_with_selected_effect"
                            android:button="@null"
                            android:checked="true"
                            android:drawableStart="@drawable/writing_copy_to_icon"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="@string/current_note"
                            android:textColor="@android:color/black"
                            android:textSize="28dp" />

                        <RadioButton
                            android:id="@+id/btn_copy_to_other_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/bg_with_selected_effect"
                            android:button="@null"
                            android:drawableStart="@drawable/writing_copy_to_icon"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="@string/other_note"
                            android:textColor="@android:color/black"
                            android:textSize="28dp" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/layout_copy_to_other_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_default2"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_other_note_list_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="@string/loading_notebook"
                                android:textColor="#ababab"
                                android:textSize="24dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <include
                                        android:id="@+id/bookshelf_list_item1"
                                        layout="@layout/bookshelf_list_item"
                                        android:visibility="invisible" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <include
                                        android:id="@+id/bookshelf_list_item2"
                                        layout="@layout/bookshelf_list_item"
                                        android:visibility="invisible" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <include
                                        android:id="@+id/bookshelf_list_item3"
                                        layout="@layout/bookshelf_list_item"
                                        android:visibility="invisible" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <include
                                        android:id="@+id/bookshelf_list_item4"
                                        layout="@layout/bookshelf_list_item"
                                        android:visibility="invisible" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <include
                                        android:id="@+id/bookshelf_list_item5"
                                        layout="@layout/bookshelf_list_item"
                                        android:visibility="invisible" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <include
                                        android:id="@+id/bookshelf_list_item6"
                                        layout="@layout/bookshelf_list_item"
                                        android:visibility="invisible" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />
                                </LinearLayout>

                            </LinearLayout>
                        </FrameLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/btn_bookshelf_list_page_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_scroll_up" />

                            <TextView
                                android:id="@+id/tv_bookshelf_list_current_page"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/tv_bookshelf_list_total_page"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp" />

                            <ImageButton
                                android:id="@+id/btn_bookshelf_list_page_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_scroll_down" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_default2"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_cancel"
                            style="@style/text_button_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@android:string/cancel" />

                        <Button
                            android:id="@+id/btn_ok"
                            style="@style/text_button_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@android:string/ok" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10" />

</LinearLayout>